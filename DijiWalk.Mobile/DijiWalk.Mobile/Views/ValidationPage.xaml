<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DijiWalk.Mobile.Views.ValidationPage"
             Title="Étape"
             BackgroundColor="#D18D28">


    <StackLayout >
        <StackLayout Margin="0,0,0,50" HorizontalOptions="Center" >
            <Label TextColor="White" FontSize="35"  Text="Validation" />
            <Label TextColor="White" HorizontalTextAlignment="Center" Text="06/01/2020"></Label>
        </StackLayout>

        <StackLayout Margin="0,0,0,10" HorizontalOptions="Center">
           
            <Image x:Name="MyImage" HeightRequest="300" WidthRequest="300"></Image>
        </StackLayout>

        <StackLayout  Spacing="20" Margin="10,0,10,50">
            <Button x:Name="TakePhoto" Clicked="Button_Clicked" CornerRadius="10" TextColor="White" BackgroundColor="Red" Text="Prendre photo"></Button>
            <Button x:Name="Valider" Clicked ="Valider_Button_Clicked" CornerRadius="10" TextColor="White" BackgroundColor="Red" Text="Valider"></Button>
            <Button x:Name="Retour" CornerRadius="10" TextColor="White" BackgroundColor="Red" Text="Retour"></Button>
            <Button CornerRadius="10" TextColor="White" BackgroundColor="Red" Text="Contacter l'organisateur"></Button>
        </StackLayout>

    </StackLayout>
</ContentPage>